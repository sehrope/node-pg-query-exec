{
    "compilerOptions": {
        "outDir": "lib",
        "target": "es2017",
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "strictPropertyInitialization": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}